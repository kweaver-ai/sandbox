# Database Configuration
DATABASE_URL=mysql+aiomysql://root:12345678@127.0.0.1:3308/sandbox_control_plane
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_RECYCLE=3600

# S3 Storage Configuration
# For local development with MinIO (docker-compose):
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=sandbox-workspace
S3_REGION=us-east-1

# For production with AWS S3:
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# S3_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# S3_BUCKET=your-production-bucket
# S3_REGION=us-east-1

# Container Runtime Configuration
RUNTIME_TYPE=docker  # Options: docker, kubernetes
DOCKER_SOCKET_URL=unix://var/run/docker.sock
KUBERNETES_CONFIG_PATH=~/.kube/config
KUBERNETES_NAMESPACE=sandbox

# Internal API Authentication
INTERNAL_API_TOKEN=change-this-to-a-secure-random-token

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development  # Options: development, production

# Warm Pool Configuration
WARM_POOL_ENABLED=true
WARM_POOL_PYTHON_BASIC_SIZE=10
WARM_POOL_PYTHON_DATASCIENCE_SIZE=20
WARM_POOL_NODEJS_BASIC_SIZE=5

# Session Configuration
SESSION_DEFAULT_TIMEOUT=300
SESSION_MAX_TIMEOUT=3600
SESSION_IDLE_TIMEOUT=1800
SESSION_MAX_LIFETIME=21600

# Execution Configuration
EXECUTION_DEFAULT_TIMEOUT=30
EXECUTION_MAX_TIMEOUT=3600
EXECUTION_HEARTBEAT_TIMEOUT=15
EXECUTION_RETRY_MAX_ATTEMPTS=3
EXECUTION_RETRY_MAX_DELAY=10

# File Upload Configuration
FILE_MAX_SIZE_MB=100
FILE_UPLOAD_TIMEOUT=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=10
HEALTH_CHECK_UNHEALTHY_THRESHOLD=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
