{
    "conponentDefineType": "helm/service",
    "name": "sandbox-runtime",
    "configSchema": {
        "title": "sandbox-runtime",
        "description": "sandbox-runtime服务配置项",
        "type": "object",
        "properties": {
            "resources": {
                "type": "object",
                "title": "容器资源控制",
                "properties": {
                    "requests": {
                        "type": "object",
                        "description": "容器运行需要的最小资源分配",
                        "properties": {
                            "memory": {
                                "type": "string",
                                "title": "最低内存"
                            },
                            "cpu": {
                                "type": "string",
                                "title": "cpu"
                            }
                        }
                    },
                    "limits": {
                        "type": "object",
                        "description": "容器运行最大资源限制",
                        "properties": {
                            "memory": {
                                "type": "string",
                                "title": "内存"
                            },
                            "cpu": {
                                "type": "string",
                                "title": "cpu"
                            }
                        }
                    }
                }
            },
            "replicaCount": {
                "type": "number",
                "title": "服务副本数"
            },
            "sandbox": {
                "type": "object",
                "title": "沙箱配置项",
                "properties": {
                    "cpuQuota": {
                        "type": "number",
                        "title": "CPU限制(CPU 核心数)"
                    },
                    "memoryLimit": {
                        "type": "number",
                        "title": "内存限制 (KB)"
                    },
                    "timeoutSeconds": {
                        "type": "number",
                        "title": "执行超时时间（秒）"
                    },
                    "poolSize": {
                        "type": "number",
                        "title": "沙箱池大小(沙箱实例个数)"
                    }
                }
            }
        }
    }
}